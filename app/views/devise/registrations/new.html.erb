<header class="intro-header headerIndex">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Sign up</h1>
                        <hr class="small">
                        <span class="subheading">So glad to have you</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
      <div class="form-group col-xs-12">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control2" %>
      </div>
  </div>

  <div class="row">
      <div class="form-group col-xs-12">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control2" %>
  </div>
  </div>

  <div class="row">
      <div class="form-group col-xs-12">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control2" %>
  </div>
  </div>

  <div class="row">
      <div class="form-group col-xs-12">
        <%= f.submit "Sign up", class: "btn btn-default" %>
      </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>

                </div>    
            </div>
        </div>
</article>